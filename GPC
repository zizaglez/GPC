void linea_dda_algoritmo(){
	float dx,dy, xpre, ypre;
	int x1,x2,y1,y2,k, x, y;
	float xinc,yinc,m,aux,aux1;

	int i, gdriver = DETECT, gmode, errorcode;
    initgraph(&gdriver, &gmode, "");

    cout<<"Ingrese el valor de x1: ";
    cin>>x1;
    cout<<"Ingrese el valor de y1: ";
    cin>>y1;
    cout<<"Ingrese el valor de x2: ";
    cin>>x2;
    cout<<"Ingrese el valor de y2: ";
    cin>>y2;

    //Constantes
    dx = x2 - x1;
    dy = y2 - y1;

    if(dx < 0){
        aux = dx * -1;
    }
    else{
        aux = dx;
        }
    if(dy < 0){
        aux1 = dy * -1;
    }
    else{
        aux1 = dy;
    }
    if(aux >= aux1){
        k = aux;
    }
    else {
        k = aux1;
    }

    xinc = dx / k;
    yinc = dy / k;

    m = dy / dx;

    x = x1;
    y = y1;

    i=1;

    cout<<"\nDiferencial de X: "<<dx<<endl;
    cout<<"\nDiferencial de Y: "<<dy<<endl;
    cout<<"Pasos: "<<k<<endl;
    cout<<"Pendiente: "<<fixed<<setprecision(2)<<m<<endl;

    if(m > 1){
        cout<<"\nPaso\t\tXprel\t\t X\t\tYprel\t\t Y"<<endl;
        cout<<" 0\t\t "<<fixed<<setprecision(2)<<x1<<"\t\t "<<lround(x)<<"\t\t "<<y1<<"\t\t "<<lround(y)<<endl;
        for (i = 0; i <= k; i++){
            xpre = x + xinc;
            ypre = y + yinc;
            cout<<" "<<i+1<<"\t\t "<<fixed<<setprecision(2)<<xpre<<"\t\t "<<lround(xpre)<<"\t\t "<<ypre<<"\t\t "<<lround(ypre)<<endl;
            x = xpre;
            y = ypre;
        }
    }
    else{
        cout<<"\nPaso\t\tXpreliminar\t\t X\t\tYpreliminar\t\t Y"<<endl;
        cout<<" 0\t\t "<<fixed<<setprecision(2)<<x1<<"\t\t "<<lround(x)<<"\t\t "<<y1<<"\t\t "<<lround(y)<<endl;
        for (i = 0; i <= k; i++){
            xpre = x - xinc;
            ypre = y - yinc;
            cout<<" "<<i+1<<"\t\t "<<fixed<<setprecision(2)<<xpre<<"\t\t "<<lround(xpre)<<"\t\t "<<ypre<<"\t\t "<<lround(ypre)<<endl;
            x = xpre;
            y = ypre;
        }
    }

	int opc;
    cout<<"Escoja el color para el trazado de pixeles: \n" //Menú seleccion de colores
    "1. Rojo\n"
    "2. Verde\n"
    "3. Azul\n"
    "4. Amarillo\n"
    "5. Rosa\n"
    "6. Blanco\n";
    cout<<"Opcion: ";
    cin>>opc;

	for (i = 0; i < k; i++){
        if(opc == 1){
            putpixel(x,y,4);
            x=x+xinc;
            cout<<"x";
            y=y+yinc;
            cout<<"y\n";
            i=i+1;
            delay(300);
        }
            if(opc == 2){
            putpixel(x,y,2);
            x=x+xinc;
            cout<<"x";
            y=y+yinc;
            cout<<"y\n";
            //i=i+1;
            delay(300);
        }
          if(opc == 3){
            putpixel(x,y,1);
            x=x+xinc;
            cout<<"x";
            y=y+yinc;
            cout<<"y\n";
            i=i+1;
            delay(300);
        }
        if(opc == 4){
            putpixel(x,y,14);
            x=x+xinc;
            cout<<"x";
            y=y+yinc;
            cout<<"y\n";
            i=i+1;
            delay(300);
        }
        if(opc == 5){
            putpixel(x,y,3);
            x=x+xinc;
            cout<<"x";
            y=y+yinc;
            cout<<"y\n";
            i=i+1;
            delay(300);
        }
        if(opc == 6){
            putpixel(x,y,15);
            x=x+xinc;
            cout<<"x";
            y=y+yinc;
            cout<<"y\n";
            i=i+1;
            delay(300);
        }
	}
	closegraph();

}
